@model RecipeHelp.Models.ViewModels.UserChangePasswordViewModel
@inject IUserRepo _userRepo

@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link href="~/Bootstrap5/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">RecipeHELP</a>
            <div id="navbarCollapse" class="collapse navbar-collapse">
                <form class="d-flex ms-auto">
                    <input class="form-control me-2" type="search" name="keyword" id="recipe search" placeholder="search recipes..." aria-label="Search" />
                    <button class="btn btn-outline-success" type="submit" asp-controller="Home" asp-action="SearchResults">GO</button>
                </form>
                <ul class="navbar-nav mb-2 mb-md-0 ms-lg-5">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="User" asp-action="Index">@_userRepo.GetLoggedInUserName()</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="User" asp-action="ResetPassword">Reset Password</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="User" asp-action="Logout">Logout</a>
                        </li>
                </ul>
            </div>
        </div>
    </nav>
        <br />
        <br />
        <h1 class="ms-xxl-4">Reset Password:</h1>
        <br />
        <div class="ms-xxl-5">
            <form asp-controller="User" asp-action="ResetPassword" method="post">
                <div asp-validation-summary="All"></div>
                <div class="mb-3 col-md-2">
                    <label class="form-label" asp-for="CurrentPassword">Current Password:</label>
                    <input class="form-control" type="text" asp-for="CurrentPassword" aria-describedby="emailHelp" />
                    <label class="form-label" asp-for="NewPassword">New Password:</label>
                    <input class="form-control" type="password" asp-for="NewPassword" />
                    <label class="form-label" asp-for="VerifyNewPassword">Verify:</label>
                    <input class="form-control" asp-for="VerifyNewPassword" type="password" />
                </div>
                <input class="btn btn-warning" type="submit" value="Reset Password" />
            </form>
        </div>
</body>
</html>
